<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <EditText
        android:inputType="textEmailAddress"
    android:hint="To"
    android:id="@+id/poshta"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_alignParentRight="true"
    android:layout_marginTop="189dp"
    android:layout_marginRight="80dp"
    android:ems="10"
    android:minHeight="48dp">

    <requestFocus />
</EditText>
    <EditText
        android:hint="Heading"
        android:id="@+id/zagalovok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="255dp"
        android:layout_marginRight="80dp"
        android:ems="10"
        android:minHeight="48dp">

        <requestFocus />
    </EditText>

    <EditText
        android:hint="Message"
        android:id="@+id/soobshenie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/zagalovok"
        android:layout_alignLeft="@+id/zagalovok"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:minHeight="48dp" />

    <TextView
        android:layout_marginLeft="40dp"

        android:id="@+id/to1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/poshta"
        android:layout_alignBottom="@+id/poshta"
        android:layout_alignParentLeft="true"
        android:text="To:" />

    <TextView
        android:layout_marginLeft="40dp"

        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/zagalovok"
        android:layout_alignBottom="@+id/zagalovok"
        android:layout_alignParentLeft="true"
        android:text="Heading:" />

    <TextView
        android:layout_marginLeft="40dp"

        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/soobshenie"
        android:layout_alignBottom="@+id/soobshenie"
        android:layout_alignParentLeft="true"
        android:text="Message:" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/soobshenie"
        android:layout_below="@+id/soobshenie"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:text="Send" />

</RelativeLayout>